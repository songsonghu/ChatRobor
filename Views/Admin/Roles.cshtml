@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin - Roles";
}

<h2>Role Management</h2>

<div class="role-form">
    <h3>Create New Role</h3>
    <form onsubmit="createRole(event)">
        <input type="text" id="roleName" placeholder="Role name" required>
        <button type="submit" class="btn btn-primary">Create Role</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <button type="button" class="btn btn-sm btn-danger" onclick="deleteRole('@role.Id')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function createRole(event) {
        event.preventDefault();
        const roleName = document.getElementById('roleName').value;

        fetch('@Url.Action("CreateRole", "Admin")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: new URLSearchParams({
                'roleName': roleName
            })
        }).then(r => r.json()).then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error: ' + (data.errors?.join(', ') || data.error));
            }
        });
    }

