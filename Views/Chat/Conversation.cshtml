@functions {
    private string MarkdownToHtml(string markdown)
    {
        // Simple markdown to HTML conversion
        if (markdown == null) return "";
        
        // Escape HTML
        markdown = System.Web.HttpUtility.HtmlEncode(markdown);
        
        // Convert line breaks
        markdown = markdown.Replace("\n", "<br>");
        
        return markdown;
    }
}
