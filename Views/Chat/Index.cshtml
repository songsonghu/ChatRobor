@{
    ViewData["Title"] = "Conversations";
}

<div class="chat-container">
    <div class="chat-sidebar">
        <div class="sidebar-header">
            <h2>Conversations</h2>
            <a href="@Url.Action("CreateConversation", "Chat")" method="post" class="btn-new-chat">
                + New Chat
            </a>
        </div>

        <div class="conversations-list">
            @if (Model.Any())
            {
                @foreach (var conv in Model)
                {
                    <div class="conversation-item @(Request.RouteValues["id"]?.ToString() == conv.Id.ToString() ? "active" : "")">
                        <a href="@Url.Action("Conversation", "Chat", new { id = conv.Id })">
                            <div class="conv-title">@conv.Title</div>
                            <div class="conv-date">@conv.UpdatedAt.ToString("MM/dd HH:mm")</div>
                        </a>
                    </div>
                }
            }
            else
            {
                <p class="empty-message">No conversations yet</p>
            }
        </div>
    </div>

    <div class="chat-main">
        <div class="chat-placeholder">
            <h3>Welcome to ChatRobor</h3>
            <p>Select a conversation or create a new one to start chatting</p>
        </div>
    </div>
</div>

<style>
    .chat-container {
        display: flex;
        height: calc(100vh - 60px);
    }

    .chat-sidebar {
        width: 300px;
        background-color: #f8f9fa;
        border-right: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .sidebar-header {
        padding: 20px;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .sidebar-header h2 {
        margin: 0;
        font-size: 20px;
    }

    .btn-new-chat {
        background-color: #667eea;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        font-size: 12px;
    }

    .btn-new-chat:hover {
        background-color: #5568d3;
    }

    .conversations-list {
        flex: 1;
        overflow-y: auto;
        padding: 10px 0;
    }

    .conversation-item {
        padding: 10px 15px;
        cursor: pointer;
        transition: background-color 0.2s;
        border-left: 3px solid transparent;
    }

    .conversation-item:hover {
        background-color: #e8eaed;
    }

    .conversation-item.active {
        background-color: #e8eaed;
        border-left-color: #667eea;
    }

    .conversation-item a {
        text-decoration: none;
        color: inherit;
    }

    .conv-title {
        font-weight: 500;
        color: #333;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .conv-date {
        font-size: 12px;
        color: #999;
        margin-top: 5px;
    }

    .empty-message {
        text-align: center;
        color: #999;
        padding: 20px;
    }

    .chat-main {
        flex: 1;
        display: flex;
        flex-direction: column;
        background-color: white;
    }

    .chat-placeholder {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: #999;
    }

    .chat-placeholder h3 {
        font-size: 24px;
        margin-bottom: 10px;
    }
</style>
