@using ChatRobor.Models
@model IEnumerable<ChatConversation>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Conversations";
}

<div class="chat-container">
    <div class="chat-sidebar">
        <div class="sidebar-header">
            <h2>Conversations</h2>
            <form asp-action="CreateConversation" asp-controller="Chat" method="post" style="display: inline;">
                <button type="submit" class="btn-new-chat">+ New Chat</button>
            </form>
        </div>

        <div class="conversations-list">
            @if (Model.Any())
            {
                @foreach (var conv in Model)
                {
                    <div class="conversation-item">
                        <a href="@Url.Action("Conversation", "Chat", new { id = conv.Id })">
                            <div class="conv-title">@conv.Title</div>
                            <div class="conv-date">@conv.UpdatedAt.ToString("MM/dd HH:mm")</div>
                        </a>
                    </div>
                }
            }
            else
            {
                <p class="empty-message">No conversations yet. Create one to start!</p>
            }
        </div>
    </div>

    <div class="chat-main">
        <div class="chat-welcome">
            <h2>Welcome to ChatRobor</h2>
            <p>Start a new conversation or select one from the sidebar to continue chatting</p>
        </div>
    </div>
</div>

<style>
    .chat-container {
        display: flex;
        height: calc(100vh - 60px);
        gap: 0;
    }

    .chat-sidebar {
        width: 280px;
        background-color: #f8f9fa;
        border-right: 1px solid #ddd;
        display: flex;
        flex-direction: column;
    }

    .sidebar-header {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .sidebar-header h2 {
        margin: 0;
        font-size: 18px;
    }

    .btn-new-chat {
        background-color: #667eea;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 12px;
    }

    .conversations-list {
        flex: 1;
        overflow-y: auto;
        padding: 10px 0;
    }

    .conversation-item {
        padding: 10px 15px;
        cursor: pointer;
        transition: background-color 0.2s;
        border-left: 3px solid transparent;
    }

    .conversation-item:hover {
        background-color: #e8eaed;
    }

    .conversation-item a {
        text-decoration: none;
        color: inherit;
    }

    .conv-title {
        font-weight: 500;
        color: #333;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .conv-date {
        font-size: 12px;
        color: #999;
        margin-top: 5px;
    }

    .empty-message {
        text-align: center;
        color: #999;
        padding: 20px;
    }

    .chat-main {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
    }

    .chat-welcome {
        text-align: center;
        color: #999;
    }

    .chat-welcome h2 {
        color: #333;
        margin-bottom: 10px;
    }
</style>
